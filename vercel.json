{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*": {
      "maxDuration": 30,
      "bodyParser": {
        "sizeLimit": "500mb"
      }
    },
    "app/api/courses/*/videos/route.ts": {
      "maxDuration": 60,
      "bodyParser": {
        "sizeLimit": "500mb"
      }
    }
  }
}